<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="left" android:id="@+id/photo_logo" android:layout_width="250dp" android:layout_height="200dp" android:layout_weight="1"/>
    <LinearLayout android:gravity="top" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="13">
        <FrameLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="13">
            <ImageView android:layout_gravity="center" android:id="@+id/imgview" android:layout_width="350dp" android:layout_height="250dp" android:scaleType="centerInside"/>
            <ImageView android:layout_gravity="center" android:id="@+id/shape" android:background="@drawable/frame" android:layout_width="400dp" android:layout_height="300dp" android:scaleType="fitXY"/>
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/strip" android:layout_width="320dp" android:layout_height="10dp" android:src="@drawable/strip_green" android:scaleType="fitXY"/>
        </FrameLayout>
        <kernal.idcard.android.MyProgressBar android:id="@+id/progressBar" android:layout_width="match_parent" android:layout_height="wrap_content" android:max="100" android:secondaryProgress="10" android:layout_weight="1" style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>
    <TextView android:textSize="20dp" android:textColor="#7fffaa" android:gravity="center" android:layout_gravity="center" android:id="@+id/text" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</FrameLayout>
